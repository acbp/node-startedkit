{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "./dist",
        "types": [
            "node", "jest", "express", "express-status-monitor"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types/**",
            "./src/@types"
        ],
        "resolveJsonModule": true,
        "useDefineForClassFields": true,
        "moduleResolution": "nodenext",
        "strict": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "removeComments": true,
        "target": "esnext",
        "lib": [
            "dom",
            "es6"
        ],
        "watch": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "baseUrl": ".",
    "paths": {
        "@server": "src/server.ts"
    },
    "exclude": [
        "node_modules",
        "test"
    ],
    "include": [
        "src/**/*"
    ]
}